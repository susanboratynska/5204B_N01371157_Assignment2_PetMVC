@model List<PetGrooming.Models.Pet>

@{
    ViewBag.Title = "List"; // SETS THE TITLE TAB OF THE PAGE 
}

<h2>List of Pets</h2>

<a href="/Pet/Add" class="btn btn-default">Add New Pet</a>

<table class="table-bordered table-hover">
    <tr>
        <th>Pet Name</th>
        <th>Species Name</th>
        <th>Pet Weight</th>
        <th class="tablewidth_wide">Action</th>
    </tr>
    @{
        foreach (var Pet in Model)
        {
            <tr>
                <td><a href="/Pet/Show/@Pet.PetID">@Pet.PetName</a></td>
                <td>@Pet.Species.Name</td>
                <td>@Pet.Weight Kg</td>
                <td>
                    <a href="/Pet/Update/@Pet.PetID" class="btn btn-default">Edit</a>
                    @Html.ActionLink("Delete Pet", "Delete", new { id = @Pet.PetID }, new { onclick = "return confirm('Confirm delete?');", @class = "btn btn-default" })
                    <!--
                        PURPOSE: ActionLink to create a confirmation pop-up before deleting data
                        SRC: https://stackoverflow.com/questions/14152575/pass-parameter-to-controller-from-html-actionlink-mvc-4

                        PURPOSE: Add class to ActionLink
                        SRC: https://stackoverflow.com/questions/18643457/how-do-i-add-a-class-to-an-html-actionlink/18643539
                     -->
                </td>
            </tr>
        }
    }
</table>
